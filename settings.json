// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "edit_predictions": {
    "provider": "none"
  },
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4",
    },
    "favorite_models": [],
    "model_parameters": [],
  },
  "project_panel": {
    "auto_fold_dirs": false,
  },
  "base_keymap": "VSCode",
  "preview_tabs": {
    "enabled": false,
  },
  "tab_bar": {
    "show_tab_bar_buttons": false,
  },
  "gutter": {
    "line_numbers": true,
  },
  "minimap": {
    "show": "never",
  },
  "scrollbar": {
    "axes": {
      "vertical": false,
    },
  },
  "cursor_shape": "bar",
  "cursor_blink": false,
  "preferred_line_length": 150,
  "icon_theme": "Zed (Default)",
  "buffer_font_family": "Monaspace Neon",
  "ui_font_family": "Monaspace Neon",
  "vim_mode": true,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Naysayer",
  },
  "terminal": {
    "font_size": 12,
  },
  "git": {
    "inline_blame": {
      "enabled": false,
    },
  },
}

