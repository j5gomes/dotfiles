{
  // ################################
  // #### FILE EXPLORER SETTINGS ####
  // ################################
  "explorer.confirmDelete": false,
  "explorer.compactFolders": false,
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.confirmDragAndDrop": false,

  // ###################################
  // #### WORKBENCH AND UI SETTINGS ####
  // ###################################
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.preferredDarkColorTheme": "Shades of Purple (Super Dark)",
  "workbench.colorTheme": "Shades of Purple (Super Dark)",
  "workbench.colorCustomizations": {
    "terminal.background": "#00000000"
  },
  "workbench.layoutControl.enabled": false,
  "workbench.settings.applyToAllProfiles": ["workbench.colorCustomizations"],
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.sideBar.location": "right",
  "workbench.navigationControl.enabled": false,
  "workbench.activityBar.location": "hidden",
  "breadcrumbs.enabled": false,

  // #################################
  // #######  WINDOW SETTINGS  #######
  // #################################
  "window.zoomLevel": 0.8,
  "window.autoDetectColorScheme": true,
  "window.restoreWindows": "one",
  "window.newWindowDimensions": "maximized",

  // #################################
  // #######  EDITOR SETTINGS ########
  // #################################
  "editor.accessibilitySupport": "off",
  "editor.fontFamily": "'FiraCode Nerd Font Mono', 'FiraCode Nerd Font', FiraCode, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 18,
  "editor.stickyScroll.enabled": false,
  "editor.lineNumbers": "relative",
  "editor.glyphMargin": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "editor.formatOnSave": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 150,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  "workbench.editor.enablePreview": false,

  // ##########################
  // ######### VIM ############
  // ##########################
  "vim.foldfix": true,
  "vim.smartRelativeLine": true,
  "vim.argumentObjectClosingDelimiters": [],
  "vim.argumentObjectOpeningDelimiters": [],
  "vim.highlightedyank.duration": 1,
  "vim.mouseSelectionGoesIntoVisualMode": false,
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<S-tab>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "w"],
      "commands": ["workbench.action.findInFiles"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["revealInExplorer"]
    },
    {
      "before": ["<leader>", "h"],
      "after": ["_"]
    },
    {
      "before": ["<leader>", "l"],
      "after": ["$"]
    },
    {
      "before": ["<leader>", "H"],
      "commands": [{ "command": "editor.action.showDefinitionPreviewHover" }]
    }
  ],
  "vim.leader": "<space>",
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    // VS Code new marker @ next occurence
    "<C-c>": false,
    // Cut
    "<C-x>": false,
    // Paste
    "<C-v>": false,
    "<C-z>": false,
    "<C-y>": false
  },
  // ############################
  // ## APC EXTENSION SETTINGS ##
  // ############################
  "apc.electron": {
    "trafficLightPosition": {
      "x": -500,
      "y": 0
    },
    "window.customTitleBarVisibility": "never",
    "apc.menubar.compact": true,
    "backgroundColor": "rgba(123, 123, 123, 0.5)",
    "transparent": true,
    "titleBarStyle": "hiddenInset",
    "vibrancy": "ultra-dark",
    "opacity": 0.95,
    "visualEffectState": "active"
  },
  "apc.statusBar": {
    "fontSize": 10,
    "height": 18
  },
  "apc.header": {
    "height": 18
  },
  "apc.stylesheet": {
    ".title-label > h2": "display: none", // Remove primary side bar title
    ".nosidebar .inline-tabs-placeholder": "width: 75px" // Align tabs to not overlap window controls when primary bar is hidden
  },

  // ###########################################
  // #######  LANGUAGE SUPPORT SETTINGS ########
  // ###########################################
  "[prisma]": {
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  "cmake.options.statusBarVisibility": "compact",
  "cmake.pinnedCommands": [
    "workbench.action.tasks.configureTaskRunner",
    "workbench.action.tasks.runTask"
  ],
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["cnva\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
  ],
  "update.mode": "manual",
  "extensions.autoCheckUpdates": false,
  "security.workspace.trust.untrustedFiles": "open",
  "gitlens.advanced.messages": {
    "suppressIntegrationRequestTimedOutWarning": true
  },

  // ################################
  // ######### OPTIMIZATION #########
  // ################################
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true
  },
  "search.searchOnType": false,
  "terminal.integrated.gpuAcceleration": "on",
  "editor.codeLens": false,
  "workbench.welcomePage.walkthroughs.openOnInstall": false,
  "svelte.enable-ts-plugin": true,
  "window.density.editorTabHeight": "compact",
  "makefile.configureOnOpen": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ################################
  // ########### OBSIDIAN ###########
  // ################################
  "obsidian-md-vsc.defaultVault": "second-brain",
  "obsidian-md-vsc.defaultVaultPath": "/Users/jgomes/repos/github/j5gomes/second-brain",
  "obsidian-md-vsc.defaultNote": "0-inbox/inbox",

  // ################################
  // ########### COPILOT ###########
  // ################################
  "chat.commandCenter.enabled": false
}
