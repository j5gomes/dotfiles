{
  // #################################
  // ###########  GENERAL ############
  // #################################
  "chat.agent.enabled": false,
  "update.showReleaseNotes": false,
  "security.workspace.trust.untrustedFiles": "open",

  // #################################
  // #######  WINDOW SETTINGS  #######
  // #################################
  "window.autoDetectColorScheme": true,
  "window.commandCenter": false,
  "window.restoreWindows": "one",
  "window.newWindowDimensions": "maximized",
  "window.menuBarVisibility": "toggle",

  // #################################
  // #####  WORKBENCH / UI LAYOUT ####
  // #################################
  "workbench.colorTheme": "j_blow",
  "workbench.preferredDarkColorTheme": "j_blow",
  "workbench.iconTheme": "vs-minimal",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.panel.showLabels": false,
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": true,

  // #################################
  // ########  ZEN MODE SETTINGS #####
  // #################################
  "zenMode.fullScreen": false,
  "zenMode.hideStatusBar": true,

  // #################################
  // #####  FILE EXPLORER SETTINGS ###
  // #################################
  "explorer.compactFolders": false,
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // #################################
  // #######  EDITOR APPEARANCE ######
  // #################################
  "editor.fontFamily": "Liberation Mono",
  "editor.fontSize": 15,
  "editor.minimap.enabled": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.semanticHighlighting.enabled": true,
  "editor.showUnused": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },
  "custom-ui-style.font.monospace": "\"Liberation Mono\"",
  "custom-ui-style.font.sansSerif": "\"Liberation Mono\"",

  // #################################
  // ########  EDITOR BEHAVIOR #######
  // #################################
  "editor.accessibilitySupport": "off",
  "editor.stickyScroll.enabled": false,
  "editor.formatOnSave": true,
  "editor.formatOnSaveMode": "file",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlineSuggest.enabled": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  // #################################
  // #######  WORD WRAP / INPUT ######
  // #################################
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },
  // #################################
  // ###########  FILES ##############
  // #################################
  "files.autoSave": "afterDelay",
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[lua]": {
    "editor.defaultFormatter": "yinfei.luahelper"
  },

  // #################################
  // ###########  TERMINAL ###########
  // #################################
  "terminal.integrated.fontFamily": "Liberation Mono",
  "terminal.integrated.tabs.location": "left",

  // #################################
  // ###########  TYPESCRIPT #########
  // #################################
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // #################################
  // ###########  GIT ################
  // #################################
  "git.confirmSync": false,
  "git.autofetch": true,

  // #################################
  // ###########  DEBUG ##############
  // #################################
  "debug.onTaskErrors": "showErrors",

  // #################################
  // ###########  EXTENSIONS #########
  // #################################
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "svelte.enable-ts-plugin": true,
  "github.copilot.nextEditSuggestions.enabled": true,

  // #################################
  // ###########  CHAT ###############
  // #################################
  "chat.viewSessions.orientation": "stacked",
  "chat.agent.codeBlockProgress": false,
  "chat.agent.thinking.terminalTools": false,
  "chat.agent.thinking.generateTitles": false,
  "chat.agentsControl.enabled": false,
  "chat.checkpoints.enabled": false,
  "chat.detectParticipant.enabled": false,
  "chat.editing.confirmEditRequestRemoval": false,
  "chat.editing.confirmEditRequestRetry": false,

  // #################################
  // ############  VIM ###############
  // #################################
  "vim.leader": "<space>",
  "vim.foldfix": true,
  "vim.argumentObjectClosingDelimiters": [],
  "vim.argumentObjectOpeningDelimiters": [],
  "vim.highlightedyank.duration": 1,
  "vim.mouseSelectionGoesIntoVisualMode": false,
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.normalModeKeyBindings": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<S-tab>"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "w"],
      "commands": ["workbench.action.findInFiles"]
    }
  ],
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-j>"],
      "after": ["<Esc>"]
    },
    {
      "before": ["<C-k>"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "d"],
      "after": ["d", "d"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["revealInExplorer"]
    },
    {
      "before": ["<leader>", "h"],
      "after": ["_"]
    },
    {
      "before": ["<leader>", "l"],
      "after": ["$"]
    },
    {
      "before": ["<leader>", "H"],
      "commands": [
        {"command": "editor.action.showDefinitionPreviewHover"}
      ]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    }
  ],
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-x>": false,
    "<C-v>": false,
    "<C-z>": false,
    "<C-y>": false
  },

  // #################################
  // ###########  DIFF EDITOR ########
  // #################################
  "diffEditor.ignoreTrimWhitespace": false,

  // #################################
  // ###########  C/C++ ##############
  // #################################
  "C_Cpp.default.recursiveIncludes.reduce": "never",
  "C_Cpp.intelliSenseMemoryLimit": 16384,
  "C_Cpp.workspaceParsingPriority": "highest",
  "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": false,
  "C_Cpp.refactoring.includeHeader": "never",
  "C_Cpp.intelliSenseCacheSize": 10240,

  // #################################
  // #######  WINDOWS SPECIFIC #######
  // #################################
  "hexeditor.columnWidth": 16,
  "hexeditor.showDecodedText": false,
  "hexeditor.defaultEndianness": "little",
  "hexeditor.inspectorType": "aside",

  // #################################
  // #######  FILE HEADER ############
  // #################################
  "fileHeaderComment.template": {
    "*": [
      "${commentbegin}======================================================================",
      "${commentprefix} $File: $filename$",
      "${commentprefix} $Date: $date$",
      "${commentprefix} $Revision: $revision$",
      "${commentprefix} $Creator: $author$",
      "${commentprefix} $Notice: (C) Copyright 2026 by jgomes, Inc. All Rights Reserved. $",
      "========================================================================${commentend}"
    ]
  }
}