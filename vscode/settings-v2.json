{
  // #################################
  // #######  WINDOW SETTINGS  #######
  // #################################
  "window.autoDetectColorScheme": true,
  "window.commandCenter": false,
  "window.restoreWindows": "one",
  "window.newWindowDimensions": "maximized",

  // #################################
  // #####  WORKBENCH / UI LAYOUT ####
  // #################################
  "workbench.colorTheme": "j_blow",
  "workbench.preferredDarkColorTheme": "j_blow",
  "workbench.iconTheme": "chalice-icon-theme",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": false,
  "workbench.panel.showLabels": false,
  "workbench.layoutControl.enabled": false,
  "workbench.activityBar.location": "hidden",
  "workbench.statusBar.visible": false,

  // #################################
  // ########  ZEN MODE SETTINGS #####
  // #################################
  "zenMode.fullScreen": false,
  "zenMode.hideStatusBar": true,

  // #################################
  // #####  FILE EXPLORER SETTINGS ###
  // #################################
  "explorer.compactFolders": false,
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // #################################
  // #######  EDITOR APPEARANCE ######
  // #################################
  "editor.fontFamily": "Monaspace Neon",
  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "editor.glyphMargin": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.hideCursorInOverviewRuler": true,
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "solid",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.semanticHighlighting.enabled": true,
  "editor.showUnused": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "keyword.other.dotenv",
        "settings": {
          "foreground": "#FF000000"
        }
      }
    ]
  },

  // #################################
  // ########  EDITOR BEHAVIOR #######
  // #################################
  "editor.accessibilitySupport": "off",
  "editor.stickyScroll.enabled": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.inlineSuggest.enabled": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  // #################################
  // #######  WORD WRAP / INPUT ######
  // #################################
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 100,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },

  // #################################
  // ###########  FILES ##############
  // #################################
  "files.autoSave": "afterDelay",
  "security.workspace.trust.untrustedFiles": "open",
  "update.showReleaseNotes": false,

  // #################################
  // ###########  TERMINAL ###########
  // #################################
  "terminal.integrated.fontFamily": "monospace",

  // #################################
  // ###########  TYPESCRIPT #########
  // #################################
  "typescript.updateImportsOnFileMove.enabled": "always",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // #################################
  // ###########  GIT ################
  // #################################
  "git.confirmSync": false,
  "git.autofetch": true,

  // #################################
  // ###########  DEBUG ##############
  // #################################
  "debug.onTaskErrors": "showErrors",

  // #################################
  // ###########  EXTENSIONS #########
  // #################################
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "svelte.enable-ts-plugin": true,
  "github.copilot.nextEditSuggestions.enabled": true,

  // #################################
  // ###########  CHAT ###############
  // #################################
  "chat.viewSessions.orientation": "stacked",

  // #################################
  // ############  VIM ###############
  // #################################
  "vim.leader": "<space>",
  "vim.foldfix": true,
  "vim.argumentObjectClosingDelimiters": [],
  "vim.argumentObjectOpeningDelimiters": [],
  "vim.highlightedyank.duration": 1,
  "vim.mouseSelectionGoesIntoVisualMode": false,
  "vim.useSystemClipboard": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,

  "vim.normalModeKeyBindings": [
    { "before": ["<leader>", "d"], "after": ["d", "d"] },
    { "before": ["<tab>"], "commands": ["workbench.action.nextEditor"] },
    { "before": ["<S-tab>"], "commands": ["workbench.action.previousEditor"] },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "w"],
      "commands": ["workbench.action.findInFiles"]
    }
  ],

  "vim.insertModeKeyBindings": [
    { "before": ["j", "k"], "after": ["<Esc>"] },
    { "before": ["<C-j>"], "after": ["<Esc>"] },
    { "before": ["<C-k>"], "after": ["<Esc>"] }
  ],

  "vim.visualModeKeyBindings": [
    { "before": [">"], "after": [">", "g", "v"] },
    { "before": ["<"], "after": ["<", "g", "v"] }
  ],

  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "d"], "after": ["d", "d"] },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.splitEditor"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    { "before": ["<leader>", "f"], "commands": ["revealInExplorer"] },
    { "before": ["<leader>", "h"], "after": ["_"] },
    { "before": ["<leader>", "l"], "after": ["$"] },
    {
      "before": ["<leader>", "H"],
      "commands": [{ "command": "editor.action.showDefinitionPreviewHover" }]
    },
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] }
  ],

  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    "<C-c>": false,
    "<C-x>": false,
    "<C-v>": false,
    "<C-z>": false,
    "<C-y>": false
  },

  // #################################
  // ###########  DIFF EDITOR ########
  // #################################
  "diffEditor.ignoreTrimWhitespace": false,

  // #################################
  // ###########  C/C++ ##############
  // #################################
  "C_Cpp.default.recursiveIncludes.reduce": "never",
  "C_Cpp.intelliSenseMemoryLimit": 16384,
  "C_Cpp.workspaceParsingPriority": "highest",
  "C_Cpp.default.browse.limitSymbolsToIncludedHeaders": false,
  "C_Cpp.refactoring.includeHeader": "never",
  "C_Cpp.intelliSenseCacheSize": 10240
}
